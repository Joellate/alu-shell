#!/bin/bash

# Define the process name and PID file location
PROCESS_NAME="manage_my_process"
PID_FILE="/var/run/my_process.pid"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is already running."
        exit 1
    fi
    # Start the process
    sudo ./manage_my_process &
    echo $! > "$PID_FILE"
    echo "$PROCESS_NAME started"
}

stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is not running."
        exit 1
    fi
    # Read the PID and kill the process
    PID=$(cat "$PID_FILE")
    kill $PID
    rm "$PID_FILE"
    echo "$PROCESS_NAME stopped"
}

restart() {
    stop
    start
    echo "$PROCESS_NAME restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

